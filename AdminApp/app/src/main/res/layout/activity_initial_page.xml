<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Initial_Page">

    <Button
        android:id="@+id/btn_new_event"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Criar novo evento"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_team"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_create_team"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Formar equipas"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_teams"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_show_teams"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:text="Visualizar equipas"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_show_events"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Visualizar eventos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_teams"
        app:layout_constraintVertical_bias="0.916"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnLogout"
        android:text="Logout"
        android:layout_marginTop="550dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="174dp"
        android:layout_height="159dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_new_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>