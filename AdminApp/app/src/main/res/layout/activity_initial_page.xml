<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Initial_Page">

    <Button
        android:id="@+id/btn_new_event"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Criar novo evento"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_team"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_create_team"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Formar equipas"
        app:layout_constraintBottom_toTopOf="@+id/btn_show_teams"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_show_teams"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:text="Visualizar equipas"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="85dp"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>